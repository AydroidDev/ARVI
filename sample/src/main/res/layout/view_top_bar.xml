<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@id/top_bar_back_button"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:background="?selectableItemBackgroundBorderless"/>

    <TextView
        android:id="@id/top_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/top_bar_title_horizontal_spacing"
        android:layout_marginStart="@dimen/top_bar_title_horizontal_spacing"
        android:layout_marginRight="@dimen/top_bar_title_horizontal_spacing"
        android:layout_marginEnd="@dimen/top_bar_title_horizontal_spacing"
        android:gravity="center"
        android:fontFamily="@string/font_family_normal"
        android:textSize="@dimen/top_bar_title_size"
        tools:text="Dashboard"/>

</RelativeLayout>